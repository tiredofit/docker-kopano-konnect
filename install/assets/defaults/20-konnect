#!/command/with-contenv bash

CONFIG_PATH=${CONFIG_PATH:-"/config/"}
LOG_FILE=${LOG_FILE:-"konnect.log"}
LOG_LEVEL=${LOG_LEVEL:-"DEBUG"}
LOG_PATH=${LOG_PATH:-"/logs/"}
LOG_TIMESTAMPS=${LOG_TIMESTAMPS:-"TRUE"}
LOG_TYPE=${LOG_TYPE:-"FILE"}
SERVER_ENABLE_HTTP=${SERVER_ENABLE_HTTP:-"FALSE"}
SERVER_ENABLE_HTTPS=${SERVER_ENABLE_HTTPS:-"FALSE"}
SERVER_LISTEN_PORT=${SERVER_LISTEN_PORT_:-236}
SERVER_LISTEN_PORT_SECURE=${SERVER_LISTEN_PORT_SECURE:-237}
SETUP_TYPE=${SETUP_TYPE:-"AUTO"}

#!/command/with-contenv bash

KONNECT_BACKEND=${KONNECT_BACKEND:-"KC"}
KONNECT_CONFIG_FILE=${KONNECT_CONFIG_FILE:-"konnectd.cfg"}
KONNECT_CONFIG_FILE_IDENTIFIER_REGISTRATION=${KONNECT_CONFIG_FILE_IDENTIFIER_REGISTRATION:-"konnectd-identifier-registration.yml"}
KONNECT_CONFIG_FILE_IDENTIFIER_SCOPES=${KONNECT_CONFIG_FILE_IDENTIFIER_SCOPES:-"konnectd-identifier-scopes.yaml"}
KONNECT_DISABLE_TLS_VALIDATION=${KONNECT_DISABLE_TLS_VALIDATION:-"FALSE"}
KONNECT_ENABLE_CLIENT_DYNAMIC_REGISTRATION=${KONNECT_ENABLE_CLIENT_DYNAMIC_REGISTRATION:-"FALSE"}
KONNECT_ENABLE_CLIENT_GUESTS=${KONNECT_ENABLE_CLIENT_GUESTS:-"FALSE"}
KONNECT_HOST_SECURE=${KONNECT_HOST_SECURE:-"FALSE"}
KONNECT_IDENTITY_MANAGER_ARGUMENTS=${KONNECT_IDENTITY_MANAGER_ARGUMENTS:-""}
KONNECT_JWT_METHOD=${KONNECT_JWT_METHOD:-"PS256"}
KONNECT_LISTEN_HOST=${KONNECT_LISTEN_HOST:-"0.0.0.0"}
KONNECT_LISTEN_PORT=${KONNECT_LISTEN_PORT:-"8777"}
KONNECT_SIGNING_KEY_FILE=${KONNECT_SIGNING_KEY_FILE:-"/certs/konnect/konnect-signing-key.pem"}
KONNECT_SIGNING_SECRET_FILE=${KONNECT_SIGNING_SECRET_FILE:-"/certs/konnect/konnect-encryption-secret.key"}
KONNECT_TIMEOUT_SESSION_KOPANO=${KONNECT_TIMEOUT_SESSION_KOPANO:-"240"}
KONNECT_VALIDATION_KEYS_PATH=${KONNECT_VALIDATION_KEYS_PATH:-"/certs/konnect/konnect-validation"}
NGINX_WEBROOT=${NGINX_WEBROOT:-"/usr/share/kopano-konnect"}
#
KONNECT_HOST=${KONNECT_HOST:-"${KONNECT_LISTEN_HOST}"}
KONNECT_PORT=${KONNECT_PORT:-"${KONNECT_LISTEN_PORT}"}
truefalse_yesno ENABLE_COREDUMPS
####

###
if var_true "${SERVER_ENABLE_HTTP}" || var_true "${SERVER_ENABLE_HTTPS}" ; then
    if var_true "${SERVER_ENABLE_HTTPS}" ; then
        SOCKET_SERVER=${SOCKET_SERVER:-"https://server:${SERVER_LISTEN_PORT_SECURE}"}
    elif var_true "${SERVER_ENABLE_HTTP}" ; then
        SOCKET_SERVER=${SOCKET_SERVER:-"http://server:${SERVER_LISTEN_PORT}"}
    fi
    if [[ "${SOCKET_SERVER}" == *"htt"*"://server:"* ]] ; then
        if ! grep -q "127.0.0.1 server" /etc/hosts ; then
            echo "127.0.0.1 server" >> /etc/hosts
        fi
    fi
else
    SOCKET_SERVER=${SOCKET_SERVER:-"file:///var/run/kopano/server.sock"}
fi

KONNECT_SOCKET_SERVER=${KONNECT_SOCKET_SERVER:-"${SOCKET_SERVER}"}
